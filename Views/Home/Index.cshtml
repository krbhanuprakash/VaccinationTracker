@{
    ViewData["Title"] = "Home Page";
}
<div style="display: flex; justify-content: space-between; align-items: flex-start;">
    <div style="width: 50%;">
       <h2>Welcome to the Vaccination Tracker</h2>
       <p>Your one-stop solution for managing vaccination schedules and records.</p>
        <p>Our application helps you keep track of your vaccination history, upcoming vaccinations, and provides reminders to ensure you never miss a dose.</p>
        <!-- Core Features Section -->
        <div style="display: flex; flex-direction: column; gap: 20px;">
            <h3>Core Features</h3>
            <ol style="padding-left: 20px;">
                <li>
                    <p><strong>Dashboard</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>Visualize user-wise vaccination schedules and statuses with interactive charts.</li>
                    </ul>
                </li>
                <li>
                    <p><strong>User Management</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>User registration, login, and profile management.</li>
                        <li>Roles: Admin and Regular User.</li>
                    </ul>
                </li>
                <li>
                    <p><strong>Vaccination Schedule</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>Maintain a database of vaccines and schedules.</li>
                        <li>Allow users to add or customize their vaccination schedules.</li>
                    </ul>
                </li>
                <li>
                    <p><strong>Notifications</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>Send email or SMS reminders for upcoming vaccinations.</li>
                    </ul>
                </li>
                <li>
                    <p><strong>Vaccine Records</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>Store digital records of completed vaccinations (e.g., certificates).</li>
                    </ul>
                </li>
                <li>
                    <p><strong>Admin Panel</strong></p>
                    <ul style="list-style-type: disc; padding-left: 20px;">
                        <li>Admin can manage users, vaccines, Dashboard and schedules.</li>
                    </ul>
                </li>

            </ol>
        </div>
    </div>
    <div style="width: 45%;">
        <h3>Dashboard Features</h3>
        <div>
            <img src="/bar-chart-image.png" alt="Bar Chart" style="width: 100%; margin-bottom: 20px;">
            <img src="/pie-chart-image.PNG" alt="Pie Chart" style="width: 100%;">
        </div>
    </div>
</div>
